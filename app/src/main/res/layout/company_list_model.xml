<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_Cname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CompanyName"
        />
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/txt_Cname"
        android:text="Name"
        android:textSize="20sp" />




    <TextView
        android:id="@+id/txt_Position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recurite Position"
        android:layout_below = "@+id/txt_name"
        />
    <TextView
        android:id="@+id/txt_Rposition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/txt_Position"
        android:text="Position"
        android:textSize="20sp" />




    <TextView
        android:id="@+id/txt_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Description"
        android:layout_below = "@+id/txt_Rposition"
        />
    <TextView
        android:id="@+id/txt_Cdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/txt_Description"
        android:text="Name"
        android:textSize="20sp" />


</RelativeLayout>